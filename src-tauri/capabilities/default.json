{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$CONFIG/*"
        },
        {
          "path": "$DOCUMENT/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$CONFIG/*"
        },
        {
          "path": "$DOCUMENT/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-app-read",
      "allow": [
        {
          "path": "$CONFIG/*"
        },
        {
          "path": "$DOCUMENT/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-app-write",
      "allow": [
        {
          "path": "$CONFIG/*"
        },
        {
          "path": "$DOCUMENT/*"
        }
      ]
    },
    "dialog:default"
  ]
}